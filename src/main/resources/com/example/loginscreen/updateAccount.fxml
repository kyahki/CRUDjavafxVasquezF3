<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.loginscreen.HelloController">
    <children>
        <VBox fx:id="pnUpdate" alignment="CENTER" prefHeight="359.0" prefWidth="339.0" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label text="Update Account!">
                <font>
                    <Font size="23.0" />
                </font>
            </Label>
         <GridPane prefHeight="265.0" prefWidth="298.0">
           <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="145.0" minWidth="10.0" prefWidth="128.0" />
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="171.0" minWidth="10.0" prefWidth="171.0" />
               <ColumnConstraints />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
            <children>
               <Label text="New Username:" />
               <TextField fx:id="txtNewUsername" GridPane.columnIndex="1" />
               <Button alignment="CENTER" mnemonicParsing="false" onAction="#onUpdateUsername" prefHeight="25.0" prefWidth="131.0" text="Update Username" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
               <Label text="New Password:" GridPane.rowIndex="2" />
               <PasswordField fx:id="txtNewPassword" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#onUpdatePassword" prefHeight="25.0" prefWidth="131.0" text="Update Password" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
               <Button mnemonicParsing="false" onAction="#onDeleteAccount" prefHeight="25.0" prefWidth="115.0" text="Delete Account" GridPane.rowIndex="3" />
               <Button mnemonicParsing="false" onAction="#onReadAccount" prefHeight="25.0" prefWidth="102.0" text="View Accounts" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </children>
         </GridPane>
        </VBox>
    </children>
</AnchorPane>
