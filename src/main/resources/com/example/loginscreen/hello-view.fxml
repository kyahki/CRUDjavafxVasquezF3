<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.loginscreen.HelloController">
    <children>
        <VBox fx:id="pnLogin" alignment="CENTER" prefHeight="359.0" prefWidth="339.0" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label text="WELCOME">
                <font>
                    <Font size="43.0" />
                </font>
            </Label>
            <GridPane prefHeight="91.0" prefWidth="285.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="145.0" minWidth="10.0" prefWidth="92.0" />
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="207.0" minWidth="10.0" prefWidth="207.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label prefHeight="20.0" prefWidth="119.0" text="UserName:" />
                    <Label prefHeight="17.0" prefWidth="124.0" text="Password:" GridPane.rowIndex="1" />
                    <PasswordField fx:id="txtPass" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Button id="loginBtn" alignment="CENTER" onAction="#onHelloButtonClick" prefHeight="39.0" prefWidth="64.0" text="Sign In" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <TextField fx:id="txtUser" GridPane.columnIndex="1" />
               <Button mnemonicParsing="false" onAction="#onRegisterClick" text="Register" GridPane.rowIndex="2" />
                </children>
            </GridPane>
        </VBox>
    </children>
</AnchorPane>
